#!/usr/bin/env python3

from docx import Document
from docx.enum.text import WD_ALIGN_PARAGRAPH
from docx.enum.text import WD_LINE_SPACING
import oms


outfile = "ms.docx"
db      = "../example"

doc = Document()

oms.reader.set_manuscriptdir(db)
oms.reader.read()

p = doc.add_paragraph("{}\n{}\n{}, {} {}\n{}\n{}\n".format(
                        oms.reader.author["name"],
                        oms.reader.author["streetAddress"],
                        oms.reader.author["addressLocality"], 
                        oms.reader.author["addressRegion"], 
                        oms.reader.author["postalCode"],
                        oms.reader.author["phone"],
                        oms.reader.author["email"]))

pf = p.paragraph_format
pf.alignment = WD_ALIGN_PARAGRAPH.RIGHT
pf.alignment = WD_LINE_SPACING.SINGLE

doc.add_paragraph()
doc.add_paragraph()
doc.add_paragraph()
doc.add_paragraph()
doc.add_paragraph()
doc.add_paragraph()
doc.add_paragraph()
doc.add_paragraph()
doc.add_paragraph()

p = doc.add_paragraph("{}\nby {}".format(
                        oms.reader.manuscript["title"], 
                        oms.reader.author["name"]))
pf = p.paragraph_format
pf.alignment = WD_ALIGN_PARAGRAPH.CENTER
pf.alignment = WD_LINE_SPACING.SINGLE

doc.save(outfile)


